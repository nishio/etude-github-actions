        },
        {
          "text": "2025-07-16",
          "created": 1748399575,
          "updated": 1748399589,
          "userId": "582e63d27c56960011aff09e"
        },
        {
          "text": "11:00 - 12:00",
          "created": 1748399708,
          "updated": 1748399717,
          "userId": "582e63d27c56960011aff09e"
        },
        {
          "text": "",
          "created": 1748399717,
          "updated": 1748399717,
          "userId": "582e63d27c56960011aff09e"
        },
        {
          "text": "Cybozu has been doing and is trying to do a lot of things that overlap with Plurality.",
          "created": 1748399524,
          "updated": 1748399573,
          "userId": "582e63d27c56960011aff09e"
