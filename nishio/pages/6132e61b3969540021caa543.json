    },
    {
      "id": "6132e883aff09e00002aba20",
      "text": "関連",
      "userId": "582e63d27c56960011aff09e",
      "created": 1630726275,
      "updated": 1630726283
    },
    {
      "id": "6132e8deaff09e00002aba25",
      "text": "　[会話を争いだと思う人]",
      "userId": "582e63d27c56960011aff09e",
      "created": 1630726367,
      "updated": 1630726381
    },
    {
      "id": "6132e88aaff09e00002aba21",
      "text": "　[自虐的認知]",
      "userId": "582e63d27c56960011aff09e",
      "created": 1630726283,
      "updated": 1630726292
    },
    {
      "id": "6132e638aff09e00002aba11",
