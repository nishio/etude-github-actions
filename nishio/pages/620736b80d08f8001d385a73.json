    {
      "id": "620736b8aff09e00001be2b4",
      "text": "名誉ある人とだけ行動しなさい。",
      "userId": "582e63d27c56960011aff09e",
      "created": 1644639929,
      "updated": 1644639929
    },
    {
      "id": "620736b8aff09e00001be2b5",
      "text": "",
      "userId": "582e63d27c56960011aff09e",
      "created": 1644639929,
