  "lines": [
    {
      "id": "60adfac0147e9d0023be1316",
      "text": "言い換えただけで考えてない",
      "userId": "582e63d27c56960011aff09e",
      "created": 1622014660,
      "updated": 1622084655
    },
    {
      "id": "60af0b3caff09e0000e123c7",
