  "lines": [
    {
      "id": "632fa3e2e4e4e1001d0f6283",
      "text": "格差拡大ではなく今までが悪平等",
      "userId": "582e63d27c56960011aff09e",
      "created": 1664066537,
      "updated": 1664066544
    },
    {
      "id": "632fa401aff09e0000e49660",
