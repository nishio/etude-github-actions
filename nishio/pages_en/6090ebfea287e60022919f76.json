 N = 40
 primes = [2]
 
 while len(primes) < N:
     x = primes[-1] + 1
     while not all(x % p for p in primes):
         x += 1
 
     primes.append(x)
     
 
 for p in primes:
     x = 1
     print
     for i in range(N):
         if x >= p:
             print "+",
             x -= p
         else:
             print " ",
 
         x *= 2
         if x == 0: 
             break
 
