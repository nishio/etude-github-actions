 from skimage import io
 import numpy as np
 WIDTH = 400
 HEIGHT = 300
 data = [np.random.choice([0, 1], size=WIDTH)]
 RULE30 = [0, 1, 1, 1, 1, 0, 0, 0]
 for y in range(1, HEIGHT):
     prev = data[-1]
     next = [
         RULE30[prev[x - 1] * 4 + prev[x] * 2 + prev[x + 1 - 400]]
         for x in range(WIDTH)]
     data.append(next)
 data = np.array(data)
 io.imsave("tmp.png", data)
